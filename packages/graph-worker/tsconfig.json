{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "es5",
    "lib": ["webworker", "es2016"],
    "module": "esnext",
    "outDir": "./dist",
    "moduleResolution": "node",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "config",
    "dist",
    "src/**/__tests__/**/*",
    "src/**/__mocks__/**/*",
    "src/**/*(.spec|.test).ts"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
